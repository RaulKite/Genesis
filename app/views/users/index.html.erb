<h1>Listing users</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
      <td><%= user.nombre %></td>
      <td><%= user.email %></td>      
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Seguro?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>